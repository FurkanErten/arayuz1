<UserControl x:Class="arayuz_deneme_1.WelcomeLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="1080" Width="1920"
             Background="#101319"
             PreviewKeyDown="Root_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kart -->
        <Border Grid.Row="1" Background="#121725" CornerRadius="20" Padding="40"
                BorderBrush="#232632" BorderThickness="1" Width="700" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Hoş geldiniz" Foreground="White" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Lütfen giriş yapın" Foreground="#A7B0C0" Margin="0,0,0,20" FontSize="16" HorizontalAlignment="Center"/>

                <StackPanel>
                    <TextBlock Text="Kullanıcı adı" Foreground="#C9D1E4" FontSize="14" Margin="2,0,0,6"/>
                    <TextBox x:Name="TxtUser" Background="#0E1118" Foreground="White" BorderBrush="#232632"
                             Padding="12" MinWidth="400" FontSize="14"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Şifre" Foreground="#C9D1E4" FontSize="14" Margin="2,12,0,6"/>
                    <PasswordBox x:Name="TxtPass" Background="#0E1118" Foreground="White" BorderBrush="#232632"
                                 Padding="12" FontSize="14"/>
                </StackPanel>

                <CheckBox x:Name="ChkRemember" Content="Beni hatırla" Foreground="#C9D1E4" Margin="2,10,0,0" FontSize="13"/>

                <Button x:Name="BtnLogin" Content="Giriş Yap" Click="BtnLogin_Click"
                        Height="48" Margin="0,12,0,0"
                        Background="#3B82F6" Foreground="White" BorderBrush="#2F6BD1"
                        FontSize="14" Cursor="Hand"/>

                <TextBlock x:Name="LblError" Foreground="#FF6B6B" Visibility="Collapsed"
                           TextWrapping="Wrap" FontSize="13" Margin="0,6,0,0"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,16,0,0"
                           Foreground="#7F8AA5" FontSize="12"
                           Text="İpucu: demo / 1234 — (şşşt kimseye söyleme)"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
