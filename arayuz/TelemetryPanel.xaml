<UserControl x:Class="arayuz_deneme_1.TelemetryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BgCard" Color="#101319"/>
        <SolidColorBrush x:Key="Stroke" Color="#232632"/>
        <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#A7B0C0"/>
        <SolidColorBrush x:Key="Success" Color="#22C55E"/>
        <SolidColorBrush x:Key="Danger"  Color="#EF4444"/>

        <Style x:Key="Divider" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,12"/>
            <Setter Property="Background" Value="#202431"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <Style x:Key="HdrText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Chip -->
        <Style x:Key="Chip" TargetType="ContentControl">
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border CornerRadius="8"
                                Background="#182233"
                                BorderBrush="{DynamicResource Stroke}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ArmChip -->
        <Style x:Key="ArmChip" TargetType="ContentControl" BasedOn="{StaticResource Chip}">
            <Setter Property="Content" Value="DISARMED"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Armed}" Value="True">
                    <Setter Property="Content" Value="ARMED"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ContentControl">
                                <Border CornerRadius="8"
                                        Background="#172B1F"
                                        BorderBrush="{DynamicResource Success}"
                                        BorderThickness="1"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding Armed}" Value="False">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ContentControl">
                                <Border CornerRadius="8"
                                        Background="#2A171C"
                                        BorderBrush="{DynamicResource Danger}"
                                        BorderThickness="1"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Tile -->
        <Style x:Key="Tile" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#121827"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
        </Style>

        <Style x:Key="TileLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextMuted}"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="TileValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextMain}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border x:Name="Card"
            Padding="12"
            CornerRadius="14"
            Background="{DynamicResource BgCard}"
            BorderBrush="{DynamicResource Stroke}"
            BorderThickness="1"
            HorizontalAlignment="Stretch">

        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.18" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <TextBlock Style="{StaticResource HdrText}" Text="Telemetry" DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <ContentControl Style="{StaticResource Chip}" Margin="0,0,8,0">
                        <TextBlock Text="{Binding Mode}" FontSize="12"/>
                    </ContentControl>
                    <ContentControl Style="{StaticResource ArmChip}"/>
                </StackPanel>
            </DockPanel>

            <Border Grid.Row="1" Style="{StaticResource Divider}"/>

            <!-- Tiles -->
            <UniformGrid x:Name="TilesGrid" Grid.Row="2" Columns="2">
                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="Lat / Lon"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding Lat, StringFormat=F6}"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding Lon, StringFormat=F6}"
                                   FontSize="16" Opacity="0.9"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="İrtifa (m)"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding Alt, StringFormat=F1}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="Airspeed (m/s)"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding Airspeed, StringFormat=F1}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="GroundSpeed (m/s)"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding GroundSpeed, StringFormat=F1}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="Heading (°)"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding HeadingDeg, StringFormat=F0}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="Pitch / Roll (°)"/>
                        <TextBlock Style="{StaticResource TileValue}">
                            <Run Text="{Binding Pitch, StringFormat=F1}"/><Run Text=" / "/>
                            <Run Text="{Binding Roll, StringFormat=F1}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="Batarya (V)"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding BattVolt, StringFormat=F2}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Tile}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource TileLabel}" Text="GPS Sats"/>
                        <TextBlock Style="{StaticResource TileValue}" Text="{Binding SatCount}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- STATES -->
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="AdaptiveStates">
                    <VisualState x:Name="Wide">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TilesGrid" Storyboard.TargetProperty="Columns">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="2"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Card" Storyboard.TargetProperty="Padding">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="12"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>

                    <VisualState x:Name="Narrow">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TilesGrid" Storyboard.TargetProperty="Columns">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Card" Storyboard.TargetProperty="Padding">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="10"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

        </Grid>
    </Border>
</UserControl>
