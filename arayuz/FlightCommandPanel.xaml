<UserControl x:Class="arayuz_deneme_1.FlightCommandPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <UserControl.Resources>
        <!-- ====== PALET ====== -->
        <SolidColorBrush x:Key="BgCard"   Color="#101319"/>
        <SolidColorBrush x:Key="Stroke"   Color="#232632"/>
        <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#A7B0C0"/>

        <SolidColorBrush x:Key="Success" Color="#22C55E"/>
        <SolidColorBrush x:Key="Danger"  Color="#EF4444"/>

        <SolidColorBrush x:Key="BtnBg"        Color="#141B2A"/>
        <SolidColorBrush x:Key="BtnBgHover"   Color="#192235"/>
        <SolidColorBrush x:Key="BtnBgPressed" Color="#111729"/>

        <SolidColorBrush x:Key="PrimaryStroke" Color="#2D4FB4"/>
        <SolidColorBrush x:Key="PrimaryBg"     Color="#1E3A8A"/>

        <SolidColorBrush x:Key="DangerStroke"  Color="#D43C3C"/>
        <SolidColorBrush x:Key="DangerBg"      Color="#7A1D26"/>

        <!-- Divider -->
        <Style x:Key="Divider" TargetType="Border">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,12"/>
            <Setter Property="Background" Value="#202431"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <!-- Header -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Section label -->
        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
            <Setter Property="FontSize" Value="10.5"/>
            <Setter Property="Margin" Value="2,0,0,8"/>
        </Style>

        <!-- Icon + Text -->
        <Style x:Key="CmdGlyph" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CmdText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextMain}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Button base -->
        <Style x:Key="CmdButtonBase" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BtnBgHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BtnBgPressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle base -->
        <Style x:Key="CmdToggleBase" TargetType="ToggleButton">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="{StaticResource BtnBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource BtnBgHover}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#14301C"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Success}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Variants -->
        <Style x:Key="CmdButton.Primary" TargetType="Button" BasedOn="{StaticResource CmdButtonBase}">
            <Setter Property="Background" Value="{StaticResource PrimaryBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryStroke}"/>
        </Style>

        <Style x:Key="CmdButton.Danger" TargetType="Button" BasedOn="{StaticResource CmdButtonBase}">
            <Setter Property="Background" Value="{StaticResource DangerBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerStroke}"/>
        </Style>

        <!-- Wrap Items -->
        <Style x:Key="WrapCmd" TargetType="Button" BasedOn="{StaticResource CmdButtonBase}">
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
        </Style>

        <Style x:Key="WrapCmd.Primary" TargetType="Button" BasedOn="{StaticResource WrapCmd}">
            <Setter Property="Background" Value="{StaticResource PrimaryBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryStroke}"/>
        </Style>

        <Style x:Key="WrapCmd.Danger" TargetType="Button" BasedOn="{StaticResource WrapCmd}">
            <Setter Property="Background" Value="{StaticResource DangerBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerStroke}"/>
        </Style>
    </UserControl.Resources>

    <Border x:Name="Card"
            Background="{StaticResource BgCard}"
            BorderBrush="{StaticResource Stroke}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="12"
            HorizontalAlignment="Stretch">

        <!-- SCROLL (alan küçükken wheel ile kayar) -->
        <ScrollViewer x:Name="Scroller"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly"
                      CanContentScroll="False"
                      PreviewMouseWheel="Scroller_PreviewMouseWheel">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <DockPanel Grid.Row="0" LastChildFill="False">
                    <TextBlock Style="{StaticResource HeaderText}" Text="Flight Commands" DockPanel.Dock="Left"/>
                </DockPanel>

                <Border Grid.Row="1" Style="{StaticResource Divider}"/>

                <!-- BODY -->
                <Grid Grid.Row="2" x:Name="BodyGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="C1" Width="*"/>
                        <ColumnDefinition x:Name="C2" Width="*"/>
                        <ColumnDefinition x:Name="C3" Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- SAFETY -->
                    <StackPanel x:Name="ColSafety" Grid.Column="0" Margin="0,0,14,0">
                        <TextBlock Style="{StaticResource SectionLabel}" Text="Safety"/>

                        <ToggleButton Style="{StaticResource CmdToggleBase}"
                                      IsThreeState="False"
                                      ClickMode="Press"
                                      IsChecked="{Binding IsArmed, Mode=OneWay}"
                                      Command="{Binding ToggleArmCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE7B9;"/>
                                <TextBlock Style="{StaticResource CmdText}" Text="ARM"/>
                            </StackPanel>
                        </ToggleButton>

                        <ToggleButton Style="{StaticResource CmdToggleBase}"
                                      IsThreeState="False"
                                      ClickMode="Press"
                                      IsChecked="{Binding IsFenceEnabled, Mode=OneWay}"
                                      Command="{Binding ToggleFenceCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE1DE;"/>
                                <TextBlock Style="{StaticResource CmdText}" Text="FENCE"/>
                            </StackPanel>
                        </ToggleButton>
                    </StackPanel>

                    <!-- MODES -->
                    <StackPanel x:Name="ColModes" Grid.Column="1" Margin="0,0,14,0">
                        <TextBlock Style="{StaticResource SectionLabel}" Text="Modes"/>

                        <WrapPanel>
                            <Button Style="{StaticResource WrapCmd.Primary}"
                                    Command="{Binding TakeoffCommand}"
                                    CommandParameter="30">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE7C5;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="TAKEOFF"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}"
                                    CommandParameter="AUTO">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE793;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="AUTO"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}"
                                    CommandParameter="LOITER">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE75D;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="LOITER"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}"
                                    CommandParameter="MANUAL">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE8C3;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="MANUAL"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>

                    <!-- MODES(2) + CRITICAL -->
                    <StackPanel x:Name="ColRight" Grid.Column="2">
                        <TextBlock Style="{StaticResource SectionLabel}" Text="Modes (2)"/>

                        <WrapPanel>
                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}" CommandParameter="RTL">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE772;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="RTL"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}" CommandParameter="FBWA">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xEA39;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="FBWA"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}" CommandParameter="CRUISE">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE80F;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="CRUISE"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding LandCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE7F1;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="LAND"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding SetModeCommand}" CommandParameter="GUIDED">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE01C;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="GUIDED"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>

                        <Border Style="{StaticResource Divider}" Margin="0,6,0,10"/>

                        <TextBlock Style="{StaticResource SectionLabel}" Text="Critical"/>

                        <WrapPanel>
                            <Button Style="{StaticResource WrapCmd.Danger}"
                                    Command="{Binding KillCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE7E8;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="KILL"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource WrapCmd}"
                                    Command="{Binding RebootCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource CmdGlyph}" Text="&#xE777;"/>
                                    <TextBlock Style="{StaticResource CmdText}"  Text="REBOOT"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>

                    <!-- STATES -->
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="AdaptiveStates">

                            <!-- WIDE -->
                            <VisualState x:Name="Wide">
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C2" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C3" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColRight" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="2"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColSafety" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0,0,14,0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0,0,14,0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </VisualState>

                            <!-- MEDIUM -->
                            <VisualState x:Name="Medium">
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C3" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0,14,14,0"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColRight" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="1"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C2" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="*"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </VisualState>

                            <!-- NARROW -->
                            <VisualState x:Name="Narrow">
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C2" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="C3" Storyboard.TargetProperty="Width">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColRight" Storyboard.TargetProperty="(Grid.Column)">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>

                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColModes" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0,14,0,0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColRight" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0,14,0,0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ColSafety" Storyboard.TargetProperty="Margin">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </VisualState>

                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>

                </Grid>
            </Grid>

        </ScrollViewer>
    </Border>
</UserControl>
